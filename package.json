{
  "name": "reasoning-logger",
  "displayName": "Reasoning Logger",
  "description": "Log AI reasoning events and diffs",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "reasoning-logger-sidebar",
          "title": "Reasoning Logger",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "reasoning-logger-sidebar": [
        {
          "type": "webview",
          "id": "reasoningLogger.sidebar",
          "name": "Reasoning Logs"
        }
      ]
    },
    "commands": [
      {
        "command": "reasoning-logger.logReasoning",
        "title": "Log Reasoning"
      },
      {
        "command": "reasoning-logger.configure",
        "title": "Configure Reasoning Logger"
      },
      {
        "command": "reasoning-logger.logFromClipboard",
        "title": "Log from Clipboard"
      },
      {
        "command": "reasoning-logger.toggleClipboardWatcher",
        "title": "Toggle Clipboard Watcher"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}